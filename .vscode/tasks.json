{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/professioncraft/professioncraft/professioncraft.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-wasm",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/professioncraft/professioncraft/professioncraft.csproj",
        "-c",
        "Debug",
        "-f",
        "net8.0-browserwasm"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
